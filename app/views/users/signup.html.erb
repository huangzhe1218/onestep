<div class="single-form-container">
  <%= form_for(@user,:url =>"/member") do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>填写的信息有误</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="boxed-group">
      <h3><%= t('signup') %></h3>
      <div class="boxed-group-inner">
        <dl class="form">
          <dt><%= f.label :name %></dt>
          <dd><%= f.text_field :name, class: "short" %></dd>
        </dl>
        <dl class="form">
          <dt> <%= f.label :email %></dt>
          <dd> <%= f.text_field :email, class: "short" %> </dd>
        </dl>
        <dl class="form">
          <dt> <%= f.label :password %> </dt>
          <dd> <%= f.password_field :password, class: "short" %> </dd>
        </dl>
        <p><%= f.submit t('signup'), :class => "button primary" %></p>
      </div>
    </div>
  <% end %>
</div>
